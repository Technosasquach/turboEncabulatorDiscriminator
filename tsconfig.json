{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "module": "commonjs",
        "jsx": "react",
        "lib": [
            "dom",
            "esnext",
            "esnext.asynciterable",
            "es2018",
            "es2017",
            "es6",
            "es2016",
            "es2015",
            "scripthost"
        ],
        // "types": [ "node" ],
        // "typeRoots": [
        //     "../node_modules/@types"
        // ],

        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "sourceMap": true,
        "allowSyntheticDefaultImports": true,

        "removeComments": false,

        "outDir": "client/dist"
    },
    "files": [
        "client/src/index.tsx"
    ],
    "include": [
        "client/**/*.ts",
        "client/**/*.tsx",
        "node_modules/@types/**/*.d.ts",
        "node_modules/@types/*.d.ts",
    ],
    "exclude": [
        "client/dist/**/*",
        "server/src/**/*",
        "server/dist/**/*"
    ]
}
